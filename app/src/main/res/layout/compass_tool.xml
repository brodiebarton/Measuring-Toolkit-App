<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CompassConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2C100"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/circle_imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="21dp"
        android:cropToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/tvHeading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_panorama_fish_eye_black_24dp" />

    <ImageView
        android:id="@+id/imageViewCompass"
        android:layout_width="68dp"
        android:layout_height="68dp"

        android:contentDescription="@string/todo"
        android:src="@drawable/ic_navigation_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_imageView2"
        app:layout_constraintEnd_toEndOf="@+id/circle_imageView2"
        app:layout_constraintStart_toStartOf="@+id/circle_imageView2"
        app:layout_constraintTop_toTopOf="@+id/circle_imageView2"
        app:srcCompat="@drawable/ic_navigation_black_24dp" />

    <TextView
        android:id="@+id/northMarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="N"
        android:textColor="#3B3B3B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/circle_imageView2" />

    <TextView
        android:id="@+id/eastMarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="75dp"
        android:text="E"
        android:textColor="#3B3B3B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/circle_imageView2"
        app:layout_constraintEnd_toEndOf="@+id/circle_imageView2"
        app:layout_constraintTop_toTopOf="@+id/circle_imageView2" />

    <TextView
        android:id="@+id/southMarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="S"
        android:textColor="#3B3B3B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/circle_imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/westMarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:text="W"
        android:textColor="#3B3B3B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/circle_imageView2"
        app:layout_constraintStart_toStartOf="@+id/circle_imageView2"
        app:layout_constraintTop_toTopOf="@+id/circle_imageView2" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="173dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="36dp"
        android:text="0.00"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#3B3B3B"
        app:layout_constraintBottom_toTopOf="@+id/backButton_compass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/backButton_compass"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/back_button_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>